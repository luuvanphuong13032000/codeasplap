@model storelaptop.Models.danhmuctintuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center;margin-top:50px">Sửa Danh Mục Tin Tức</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.madanhmuctintuc)

        <div class="form-group">
            <span style="margin-left:250px">
                @Html.LabelFor(model => model.tendanhmuctintuc, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10" style="margin-left:250px;width:800px">
                    @Html.EditorFor(model => model.tendanhmuctintuc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tendanhmuctintuc, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
