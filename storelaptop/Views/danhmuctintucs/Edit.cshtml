            </div>
        </div>
    </div>
}

<div style="text-align:center;margin-top:20px">
    <button style="background-color:orange">  @Html.ActionLink("Back to List", "Index")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
