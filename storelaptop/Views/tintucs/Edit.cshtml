@model storelaptop.Models.tintuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/ckfinder/ckfinder.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center;margin-top:50px">Sửa Tin Tức</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.matintuc)

        <div class="form-group">
            <span style="margin-left:150px">
                @Html.LabelFor(model => model.anh, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10" style="margin-left:150px;width:900px">
                    @Html.EditorFor(model => model.anh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.anh, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <span style="margin-left:150px">
                @Html.LabelFor(model => model.tentintuc, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10" style="margin-left:150px;width:900px">
                    @Html.EditorFor(model => model.tentintuc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tentintuc, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <span style="margin-left:150px">
                @Html.LabelFor(model => model.mota, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10" style="margin-left:150px;width:900px">
                    @Html.EditorFor(model => model.mota, new { htmlAttributes = new { @class = "form-control" }, @id = "mota" })
                    @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger" })
                    <script>
                        CKEDITOR.replace("mota",
                            {
                                filebrowserBrowseUrl: '/content/ckfinder/ckfinder.html',
                                filebrowserImageBrowseUrl: '/content/ckfinder/ckfinder.html?type=Images',
                                filebrowserFlashBrowseUrl: '/content/ckfinder/ckfinder.html?type=Flash',
                                filebrowserUploadUrl: '/content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files',
                                filebrowserImageUploadUrl: '/content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Images',
                                filebrowserFlashUploadUrl: '/content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Flash'
                            });</script>
                </div>
        </div>

        <div class="form-group">
            <span style="margin-left:150px">
                @Html.LabelFor(model => model.chitiet, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10" style="margin-left:150px;width:900px">
                    @Html.EditorFor(model => model.chitiet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.chitiet, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2" style="margin-left:150px;"> Tên Danh Mục Tin Tức</span>
            <div class="col-md-10" style="margin-left:150px;width:900px">
                @Html.DropDownList("madanhmuctintuc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.madanhmuctintuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:150px;margin-top:20px">
                <input type="submit" value="Save" class="btn btn-default" style="background-color:orange" />
            </div>
        </div>
    </div>
}

<div style="text-align:center;margin-top:20px">
    <button style="background-color:orange"> @Html.ActionLink("Back to List", "Index")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
