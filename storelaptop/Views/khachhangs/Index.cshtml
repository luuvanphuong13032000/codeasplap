@model IEnumerable<storelaptop.Models.khachhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;margin-top:50px">Danh Sách Khách Hàng</h2>

<p style="text-align:center">
    <button>   @Html.ActionLink("Thêm Khách Hàng", "Create")</button>
    @using (Html.BeginForm("Index", "khachhangs", FormMethod.Get))
    {
    <p style="text-align:center">
        Nhập Tên Tìm kiếm: @Html.TextBox("SearchString")
        <input type="submit" value="Tìm Kiếm" />
    </p>
}
    </p>
    <style>

        .table tr th {
            background-color: yellow;
            border: 2px black solid
        }

        .table tr td {
            border: 2px black solid
        }
    </style>
    <table class="table" style="text-align:center;border:1px black solid;width:1000px;margin:0 auto;margin-bottom:150px">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.makhachhang)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.tenkhachhang)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ngaysinh)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.diachi)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.sodienthoai)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th style="text-align:center; width:250px">Chức Năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.makhachhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenkhachhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngaysinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.diachi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sodienthoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    <button>    @Html.ActionLink("Edit", "Edit", new { id = item.makhachhang }) </button>|
                    <button>    @Html.ActionLink("Details", "Details", new { id = item.makhachhang })</button> |
                    <button>  @Html.ActionLink("Delete", "Delete", new { id = item.makhachhang })</button>
                </td>
            </tr>
        }

    </table>
