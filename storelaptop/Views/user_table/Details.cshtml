@model storelaptop.Models.user_table

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .table tr th {
        background-color: yellow;
        border: 2px black solid
    }

    .table tr td {
        border: 2px black solid
    }
</style>
<br />
<br />
<br />
<div>
    <h4 style="text-align:center">Chi Tiết Tài Khoản</h4>
    <hr />
    <table class="table" style="text-align:center;border:1px black solid;width:600px;margin:0 auto">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.user_name)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.pass_word)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.full_name)
            </th>

        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.id)
            </td>
            <td>
                @Html.DisplayFor(model => model.user_name)
            </td>
            <td>
                @Html.DisplayFor(model => model.pass_word)
            </td>
            <td>
                @Html.DisplayFor(model => model.full_name)
            </td>

        </tr>

    </table>
</div>
<p style="text-align:center;margin-top:20px">
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    <button> @Html.ActionLink("Back to List", "Index")</button>
</p>
